<!-- Adding the Uval Form -->
<form>
	<div class="form-group">
		<label>Material Name</label>
		{{input type="text" class="form-control" value=materialName placeholder="Add First Name..."}}
	</div>
  <div class="form-group">
		<label>Thickness</label>
		{{input type="text" class="form-control" value=thickness placeholder="Add Surname..."}}
	</div>
  <div class="form-group">
    <label>K Value</label>
    {{input type="text" class="form-control" value=kValue placeholder="Add Phone Number..."}}
  </div>

	<button {{action 'addUval'}} class="btn btn-primary">
    Add Uval
  </button>
</form>
